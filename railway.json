{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "mirroros-public/Dockerfile",
    "buildCommand": "cd mirroros-public && pip install -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "cd mirroros-public && gunicorn --bind 0.0.0.0:$PORT --workers 2 app:create_app()"
  }
}